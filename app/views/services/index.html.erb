<%= render 'shared/navbar' %>
<div class="wrapper">

  <div class="phone">
      <%=  image_tag "phone.png" %>
  </div>

  <div class="banner">
    <%=   cl_image_tag  'http://res.cloudinary.com/robmitchell/image/upload/w_1000,h_400,c_fill/v1518784291/banner2_oxd99x.jpg' %>
  </div>

  <div class="container">
    <div class="row">

      <% @services.each  do |service| %>
      <div class="col-xs-6 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.0)), url(
        '<%= cl_image_path service.photos.first.path, width: 360, ht: 240, crop: :lfill %>') " >
        <div class="card-description">
          <h2> <%= service.name.capitalize %> </h2>

        </div>
      </div>
      <%= link_to "", service_path(service), class: "card-link" %>

    </div>
    <% end %>

  </div>


</div>
</div>

